{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "name": "Citizens' Hub",
  "description": "Browse and create your CCU chains in Star Citizen â€” and more",
  "version": "1.0.0",
  "host_permissions": [
    "https://robertsspaceindustries.com/*",
    "https://support.robertsspaceindustries.com/*"
  ],
  "permissions": [
    "storage",
    "cookies"
  ],
  "manifest_version": 3,
  "firefox:browser_specific_settings": {
    "gecko": {
      "id": "extension@citizenshub.app"
    }
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "chromium:service_worker": "src/background.ts",
    "firefox:scripts": ["src/background.ts"]
  },
  "action": {
    "default_title": "Citizens' Hub",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "128": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://citizenshub.app/*",
        "https://staging.citizenshub.app/*",
        "*://localhost/*"
      ],
      "js": [
        "src/content.ts"
      ],
      "css": [
      ],
      "run_at": "document_start"
    }
  ]
}
